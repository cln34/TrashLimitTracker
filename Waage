

#include "HX711.h"


// HX711 Verdrahtung
const int WAAGE_1_DOUT_PIN = 5; // DT Pin des Hx711
const int WAAGE_1_SCK_PIN = 6;  // SCK Pin des Hx711



HX711 waage1;


void setup() {
  
  Serial.begin(115200);
  Serial.println("HX711 Test");
  waage1.begin(WAAGE_1_DOUT_PIN, WAAGE_1_SCK_PIN);
 
  
}

void loop() {
  
  if (waage1.is_ready()) {
    float messwert1 = ((waage1.read() * (-0.0001)) - 36) * 0.409;
    Serial.print("Messstelle 1 Wert: ");
    Serial.println(messwert1, 2);
    Serial.println();
    Serial.println();
  }
  else {
    Serial.println("HX711 Messstelle 1 nicht verbunden.");
  }



  delay(1000);

}
