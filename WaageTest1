

#include "HX711.h"

// HX711 Verdrahtung
const int WAAGE_1_DOUT_PIN = 5; // DT Pin des Hx711
const int WAAGE_1_SCK_PIN = 6;  // SCK Pin des Hx711

/*const int WAAGE_2_DOUT_PIN = 8; // DT Pin des Hx711
const int WAAGE_2_SCK_PIN = 9;  // SCK Pin des Hx711 */

HX711 waage1;
HX711 waage2;

void setup() {
  Serial.begin(9600);
  waage1.begin(WAAGE_1_DOUT_PIN, WAAGE_1_SCK_PIN);
//waage2.begin(WAAGE_2_DOUT_PIN, WAAGE_2_SCK_PIN);
}

void loop() {

  if (waage1.is_ready()) {
    float messwert1 = ((waage1.read() * (-0.0001)) - 36) * 0.409;
    Serial.print("Messstelle 1 Wert: ");
    Serial.println(messwert1, 2);
    Serial.println();
    Serial.println();
  }
  else {
    Serial.println("HX711 Messstelle 1 nicht verbunden.");
  }



  /*if (waage2.is_ready()) {
    float messwert2 = (waage2.read() * (-1));
    Serial.print("Messstelle 2 Wert: ");
    Serial.println(messwert2, 2);
    Serial.println();
    Serial.println();
    Serial.println();
    Serial.println();
  }
  else {
    Serial.println("HX711 Messstelle 2 nicht verbunden.");
  }*/


  delay(1000);

}
